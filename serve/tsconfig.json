{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "types": ["node"],
        "baseUrl": "./",
        "watch": true,
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src"]
}
